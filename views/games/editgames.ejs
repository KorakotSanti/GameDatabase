<%- include('../partials/header') %>
<div class="grid d-flex justify-content-center border-top border-primary">
    <form action="/game/<%= game['gameid'] %>?_method=PUT" method="POST" class="form-css">
       <div class="form-group">
         <h3>Edit: <%= game['gamename'] %></h3>
       </div>
       <div class="form-group">
         <label>Game</label>
         <input type="text" name="gamename" class="form-control" value="<%= game['gamename'] %>" required>
       </div>
       <div class="form-group">
         <label>Developer</label>
         <input type="text" name="dev" class="form-control" value="<%= game['Developer'] %>" required>
       </div>
       <div class="form-group">
          <label>Publisher</label>
          <input type="text" name="pub" class="form-control" value="<%= game['Publisher'] %>" required>
       </div>
       <div class="form-group">
        <label>Quality Rating</label>
        <input type="text" aria-describedby="QRHELP" name="quality" class="form-control" value="<%= game['Quality'] %>">
        <small id="QRHELP" class="form-text text-muted">Scale of 0 - 10</small>
       </div>
       <div class="form-group">
        <label>Maturity Rating</label>
        <input type="text" aria-describedby="MRHELP" name="maturity" class="form-control" value="<%= game['Maturity'] %>">
        <small id="MRHELP" class="form-text text-muted">Leave blank or fill with T, M, E, or N/A</small>
       </div>
       <div class="form-group">
        <label>Image URL</label>
        <input type="text" name="image"  class="form-control" value="<%= game['image'] %>">
       </div>
       <div class="row d-flex justify-content-center">
          <button class="btn btn-success">Submit</button>
       </div>
    </form>
</div>
<%- include("../partials/footer") %>
