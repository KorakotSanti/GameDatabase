<%- include('../partials/header') %>
    <div class="container-fluid">
        <form action="/publisher" method="POST">
            <div>
                <input type="text" name="pubname" placeholder="Publisher" class="form-control input-css">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>

        <table style="width:100%">
            <tr>
                <th>Publisher</th>
                <th>Year Established</th>
            </tr>
        <% if (pubs.length > 0) { %>
            <% for(var i=0; i<pubs.length; i++) { %>
                <tr class="table_work">
                    <td><a href="/publisher/<%= pubs[i]['pub_id'] %>"><%= pubs[i]['pub_name'] %></a></td>
                    <td><%= pubs[i]['est'] %></td>
                </tr>
            <% } %>
        <% } %>
        </table>
        <% if (pubs.length == 0) { %>
            <div>
                <h1>NO PUBLISHER FOUND</h1>
            </div>
        <% } %>
    </div>
     
<%- include("../partials/footer") %>