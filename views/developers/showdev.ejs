<%- include('../partials/header') %>
 <div class="container d-flex justify-content-center">   
    <div class="col-4">
       <div class="row">
          <div><button class="btn btn-success"><a href="/developer/<%= infos['devid'] %>/edit" class="text-light">EDIT</a></button></div>
       </div>
       <div class="row">
          <div>
            <h1><%= infos['devname'] %></h1>
          </div>
          <div>
            <h5><%= infos['est'] %></h5>
          </div>
       </div>
       <div class="row">
          <div class="col">
                <div class="list-group">
                  <h3>Games</h3>
                  <% if (infos['games'].length == 0){ %>
                     <li class="list-group-item">No Games Available</li>
                  <% } %>
                  <% if (infos['games'].length > 0) { %>
                     <% for (var i=0; i < infos['games'].length; i++) { %>
                        <a href="/game/<%= infos['games'][i]['gameid'] %>" class="list-group-item list-group-item-action"><%= infos['games'][i]["gamename"] %></a>
                     <% } %>
                  <% } %>
                </div>
          </div>
       </div>
    </div>
 </div>

 <%- include("../partials/footer") %>