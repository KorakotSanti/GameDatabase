<%- include('partials/header') %>
    <div class="container-fluid">
        <form action="/game" method="POST">
            <div>
                <label>Game Name</label>
                <input type="text" name="gamename" placeholder="game">
                <select name="genre">
                    <option value="(SELECT genre_name FROM genre)">Genre</option>
                    <% for (var i=0; i<genres.length; i++) { %>
                        <option value=<%= genres[i]['genre_name'] %>><%= genres[i]['genre_name'] %></option>
                    <% } %>
                </select>
                <select name="platform">
                    <option value="(SELECT platform_name FROM platform)">Platform</option>
                    <% for (var i=0; i<platforms.length; i++) { %>
                        <option value=<%= platforms[i]['platform_name'] %>><%= platforms[i]['platform_name'] %></option>
                    <% } %>
                </select>
                <button>Submit</button>
            </div>
        </form>

        <table style="width:100%">
            <tr>
                <th>Game</th>
                <th>Quality</th>
                <th>Maturity</th>
                <th>Developer</th>
                <th>Publisher</th>
            </tr>
        <% for(var i=0; i<games.length; i++) { %>
            <tr>
                <td><a href="/game/<%= games[i]['game_id'] %>"><%= games[i]['Game'] %></a></td>
                <td><%= games[i]['Quality'] %></td>
                <td><%= games[i]['Maturity'] %></td>
                <td><%= games[i]['Developer'] %></td>
                <td><%= games[i]['Publisher'] %></td>
            </tr>
        <% } %>
        </table>
    </div>
     
<%- include("partials/footer") %>